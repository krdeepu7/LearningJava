package Chapter_3;

import java.util.Scanner;

// Conversion of Strings

public class toLower {
    public static void main(String[] args) {

        // Scanner object
        Scanner sc = new Scanner(System.in);

        System.out.println("Enter an String");
        String str = sc.nextLine();

        System.out.println("1. Convert to lower case\n 2. Convert to upper case");
        int ch = sc.nextInt();

        switch (ch) {
            case 1: {
                System.out.println("Lower case will be: " + str.toLowerCase());
                break;
            }

            case 2: {
                System.out.println("Upper case will be: " + str.toUpperCase());
                break;
            }
            default: {
                System.out.println("Inalid Input");

            }
        }

    }

}
